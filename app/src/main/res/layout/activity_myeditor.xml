    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/colorplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/action_black"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_black"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_white"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_white"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_red"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_red"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_orange"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_orange"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_yellow"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_yellow"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_green"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_green"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_lightgreen"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_lightgreen"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_blue"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_blue"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/action_purple"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/buttonsize"
                android:background="@color/color_purple"
                android:contentDescription="@null" />
        </LinearLayout>
    </HorizontalScrollView>

    <org.fitzeng.zzchat.aty.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"

        />
